@model Record

@{
    ViewBag.Title = "Update";
}

<div class="container-sm">
    <h3>Update</h3>
    <hr/>
    @using (Html.BeginForm("ConfirmUpdate", "Data", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.TableName)
        <dl class="row">
            @for (var i = 0; i < Model.Keys.Length; i++)
            {
                @Html.HiddenFor(m => m.Keys[i])
                
                if (i != Model.PrimaryKeyColumnId)
                {
                    <dt class="col-sm-2">
                        @Html.DisplayFor(m => m.Keys[i])
                    </dt>
                    <dd class="col-sm-10">
                        @Html.TextBoxFor(m => m.Values[i], new { @class = "form-control" })
                    </dd>
                }
                else
                {
                    @Html.HiddenFor(m => m.Values[i])
                }
            }
        </dl>
        
        <button class="btn btn-warning me-2" onclick="history.back(); return false;">Go back</button>
        <input type="submit" class="btn btn-primary" value="Proceed"/>
    }
</div>