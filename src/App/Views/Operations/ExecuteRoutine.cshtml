@model Record

@{
    ViewBag.Title = "Execute routine";
}

<div class="container-sm">
    <h3>@Model.TableName</h3>
    <h6>@ViewBag.Description</h6>
    <hr/>
    @using (Html.BeginForm("ExecuteRoutine", "Operations", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.TableName)
        <dl class="row">
            @for (var i = 0; i < Model.Keys.Length; i++)
            {
                @Html.HiddenFor(m => m.Keys[i])
                
                <dt class="col-sm-2">
                    @Html.DisplayFor(m => m.Keys[i])
                </dt>
                <dd class="col-sm-10">
                    @Html.TextBoxFor(m => m.Values[i], new { @class = "form-control" })
                </dd>
            }
        </dl>

        <button class="btn btn-warning" onclick="history.back(); return false;">Go back</button>
        <input type="submit" class="btn btn-primary" value="Execute"/>
    }
</div>